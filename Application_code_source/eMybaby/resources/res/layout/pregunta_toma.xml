        <Button android:textSize="@dimen/fuente_menu" android:textColor="#1dbea5" android:id="@+id/si" android:background="@null" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
