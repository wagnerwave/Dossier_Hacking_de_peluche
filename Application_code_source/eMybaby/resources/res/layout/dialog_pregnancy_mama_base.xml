        <TextView android:textSize="@dimen/mama_text_size_28pt" android:textColor="@color/mama_date_picker_save_color" android:gravity="center" android:id="@+id/tv_dialog_save" android:background="?attr/selectableItemBackground" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textAllCaps="true"/>
        <View android:background="@color/grey" android:layout_width="0.5dp" android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:background="@color/grey" android:layout_width="match_parent" android:layout_height="2dp"/>
</LinearLayout>
