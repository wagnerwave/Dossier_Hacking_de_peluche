    <ListView android:id="@+id/pregnancy_bluetooth_listview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:cacheColorHint="@android:color/transparent" android:divider="@android:color/white" android:dividerHeight="1dp" android:layout_above="@+id/pregnancy_bluetooth_bottom_container" android:layout_below="@+id/pregnancy_bluetooth_devices"/>
</RelativeLayout>
