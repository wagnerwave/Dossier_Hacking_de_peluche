<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/pink" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.sozpic.miniland.TopMenuActivity android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/pregnancy_bt_common_header" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="@dimen/alto_menu_head" android:layout_alignParentTop="true"/>
    <FrameLayout android:id="@+id/pregnancy_bt_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/pregnancy_bt_common_header">
        <include layout="@layout/layout_pregnancy_section_header"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/pregnancy_bluetooth_bottom_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <com.sozpic.miniland.componentes.TextViewGotham android:textSize="@dimen/fuente_home" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/pregnancy_bluetooth_instructions" android:layout_width="match_parent" android:layout_height="wrap_content"/>
