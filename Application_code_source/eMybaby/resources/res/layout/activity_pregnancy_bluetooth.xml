    </LinearLayout>
    <com.sozpic.miniland.componentes.TextViewGotham android:textSize="@dimen/fuente_menu" android:textColor="@android:color/white" android:id="@+id/pregnancy_bluetooth_title" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/pregnancy_bt_header"/>
    <View android:id="@+id/pregnancy_bluetooth_title_separator" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_below="@+id/pregnancy_bluetooth_title"/>
    <com.sozpic.miniland.componentes.TextViewGotham android:textSize="@dimen/fuente_home" android:textColor="@color/pink_dark" android:id="@+id/pregnancy_bluetooth_devices" android:background="@drawable/bg_rounded_light_pink" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_below="@+id/pregnancy_bluetooth_title_separator"/>
