<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/gris4" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/miniland_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="8dp" app:cardElevation="0dp">
            <ImageView android:id="@+id/iv_banner" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:src="@drawable/img_eco_friendly" android:adjustViewBounds="true"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/miniland_world_card_margin_top" app:cardCornerRadius="8dp" app:cardElevation="0dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_app_grow_fun" android:layout_width="match_parent" android:layout_height="@dimen/miniland_world_images_height" android:src="@drawable/img_grow_fun" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
                <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/text_color" android:id="@+id/tv_app_grow_fun_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="10dp" android:layout_marginRight="16dp" android:lineSpacingExtra="3dp"/>
                <TextView android:textSize="@dimen/nutrition_chefy_text_size" android:textColor="@color/text_color" android:id="@+id/tv_app_grow_fun_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:layout_marginBottom="18dp" android:lineSpacingExtra="3dp"/>
                <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/white" android:id="@+id/tv_app_grow_fun_btn" android:background="@drawable/background_miniland_world_btn" android:paddingLeft="18dp" android:paddingTop="8dp" android:paddingRight="18dp" android:paddingBottom="8dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="24dp" android:foreground="?attr/selectableItemBackground"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/miniland_world_card_margin_top" app:cardCornerRadius="8dp" app:cardElevation="0dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_family" android:layout_width="match_parent" android:layout_height="@dimen/miniland_world_images_height" android:src="@drawable/img_family" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
                <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/text_color" android:id="@+id/tv_family_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="10dp" android:layout_marginRight="16dp" android:lineSpacingExtra="3dp"/>
                <TextView android:textSize="@dimen/nutrition_chefy_text_size" android:textColor="@color/text_color" android:id="@+id/tv_family_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:layout_marginBottom="18dp" android:lineSpacingExtra="3dp"/>
                <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/white" android:id="@+id/tv_family_btn" android:background="@drawable/background_miniland_world_btn" android:paddingLeft="18dp" android:paddingTop="8dp" android:paddingRight="18dp" android:paddingBottom="8dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="24dp" android:foreground="?attr/selectableItemBackground"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/miniland_world_card_margin_top" app:cardCornerRadius="8dp" app:cardElevation="0dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_blog" android:layout_width="match_parent" android:layout_height="@dimen/miniland_world_images_height" android:src="@drawable/img_blog" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
                <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/white" android:id="@+id/tv_blog_btn" android:background="@drawable/background_miniland_world_btn" android:paddingLeft="18dp" android:paddingTop="8dp" android:paddingRight="18dp" android:paddingBottom="8dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp" android:layout_marginBottom="24dp" android:foreground="?attr/selectableItemBackground"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/text_color" android:id="@+id/tv_find_us" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="26dp" android:layout_marginRight="2dp" android:lineSpacingExtra="3dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp">
            <RelativeLayout android:id="@+id/rl_contact_phone" android:background="?attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_contact_phone" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_miniland_world_phone"/>
                <TextView android:textSize="@dimen/nutrition_chefy_text_size" android:textColor="@color/text_color" android:id="@+id/tv_contact_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toRightOf="@+id/iv_contact_phone" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_contact_email" android:background="?attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp">
                <ImageView android:id="@+id/iv_contanct_email" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_miniland_world_email"/>
                <TextView android:textSize="@dimen/nutrition_chefy_text_size" android:textColor="@color/text_color" android:id="@+id/tv_contact_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toRightOf="@+id/iv_contanct_email" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView android:textSize="@dimen/nutrition_chefy_text_size" android:textColor="@color/text_color" android:id="@+id/tv_social_networks" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="22dp" android:layout_marginRight="2dp" android:lineSpacingExtra="3dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="52dp">
            <ImageView android:id="@+id/iv_social_instagram" android:focusable="true" android:clickable="true" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/ic_miniland_world_instagram"/>
            <ImageView android:id="@+id/iv_social_facebook" android:focusable="true" android:clickable="true" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginLeft="10dp" android:src="@drawable/ic_miniland_world_facebook"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
