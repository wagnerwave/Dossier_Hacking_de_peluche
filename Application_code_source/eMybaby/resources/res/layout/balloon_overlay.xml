<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/balloon_main_layout" android:background="@drawable/balloon_overlay_bg_selector" android:paddingLeft="10dp" android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="25dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="200dp">
    <LinearLayout android:id="@+id/balloon_inner_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_weight="1">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="40dp" android:layout_weight="1">
            <TextView android:textSize="16dp" android:textColor="@android:color/primary_text_light" android:id="@+id/balloon_item_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="12dp" android:textColor="@android:color/secondary_text_light" android:id="@+id/balloon_item_snippet" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/balloon_disclosure" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/balloon_disclosure"/>
    </LinearLayout>
    <ImageView android:id="@+id/balloon_close" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/balloon_overlay_close"/>
</LinearLayout>
