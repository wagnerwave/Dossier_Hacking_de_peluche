                <LinearLayout android:orientation="vertical" android:id="@+id/frg_pregnancy_introduce_calculator_result_container" android:background="@drawable/bg_green_rounded" android:padding="@dimen/padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
