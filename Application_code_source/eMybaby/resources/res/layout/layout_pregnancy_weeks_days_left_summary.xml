<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/center" android:visibility="invisible" android:layout_width="0dp" android:layout_height="0dp" android:layout_centerInParent="true"/>
    <View android:background="@drawable/bg_gradient_pink_darker" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ScrollView android:id="@+id/pregnancy_weeks_days_left_area_body" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/pregnancy_weeks_days_left_button_continuar">
        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="38sp" android:textColor="@android:color/white" android:id="@+id/pregnancy_weeks_days_left_text_felicidades" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="¡Felicidades!" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="13sp" android:textColor="@android:color/white" android:id="@+id/pregnancy_weeks_days_left_text_tu_embarazo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:text="Tu embarazo:" android:layout_below="@+id/pregnancy_weeks_days_left_text_felicidades"/>
            <TextView android:textSize="25sp" android:textStyle="bold" android:textColor="@android:color/white" android:id="@+id/pregnancy_weeks_days_left_text_5_semanas_1_dia" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 semanas, 1 día" android:layout_below="@+id/pregnancy_weeks_days_left_text_tu_embarazo" android:layout_alignLeft="@+id/pregnancy_weeks_days_left_text_tu_embarazo"/>
            <TextView android:textSize="13sp" android:textColor="@android:color/white" android:id="@+id/pregnancy_weeks_days_left_text_cuenta_atras" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Cuenta atrás:" android:layout_below="@+id/pregnancy_weeks_days_left_text_5_semanas_1_dia" android:layout_alignLeft="@+id/pregnancy_weeks_days_left_text_5_semanas_1_dia"/>
            <TextView android:textSize="25sp" android:textStyle="bold" android:textColor="@android:color/white" android:id="@+id/pregnancy_weeks_days_left_text_34_semanas_6_dias" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="34 semanas, 6 días" android:layout_below="@+id/pregnancy_weeks_days_left_text_cuenta_atras" android:layout_alignLeft="@+id/pregnancy_weeks_days_left_text_cuenta_atras"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/photo_pregnant_woman" android:adjustViewBounds="true" android:layout_below="@+id/pregnancy_weeks_days_left_text_34_semanas_6_dias"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:id="@+id/pregnancy_weeks_days_left_button_continuar" android:background="?attr/selectableItemBackground" android:paddingLeft="15dp" android:paddingRight="10dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/center" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
        <TextView android:textSize="20sp" android:textColor="@android:color/white" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Continuar" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="21dp" android:src="@drawable/ic_grey_arrow" android:tint="@android:color/white" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
