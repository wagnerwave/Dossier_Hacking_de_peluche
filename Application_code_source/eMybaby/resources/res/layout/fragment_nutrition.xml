            <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/white" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/tv_book_free_btn" android:background="@drawable/background_nutrition_btn" android:paddingLeft="14dp" android:paddingTop="4dp" android:paddingRight="14dp" android:paddingBottom="4dp" android:focusable="true" android:clickable="true" android:layout_width="260dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp" android:foreground="?attr/selectableItemBackground" android:lines="2"/>
        </androidx.cardview.widget.CardView>
        <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/text_color" android:id="@+id/tv_book_chefy_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="@dimen/miniland_world_card_margin_top" android:layout_marginRight="2dp" android:layout_marginBottom="10dp" android:lineSpacingExtra="3dp"/>
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="8dp" app:cardElevation="0dp">
            <ImageView android:id="@+id/iv_book_chefy" android:layout_width="match_parent" android:layout_height="@dimen/nutrition_images_height" android:src="@drawable/img_book_chefy" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
            <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/white" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/tv_book_chefy_btn" android:background="@drawable/background_nutrition_btn" android:paddingLeft="14dp" android:paddingTop="4dp" android:paddingRight="14dp" android:paddingBottom="4dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="16dp" android:foreground="?attr/selectableItemBackground"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/nutrition_chefy_margin_top" android:layout_marginBottom="60dp">
            <androidx.cardview.widget.CardView android:id="@+id/card_chefy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_centerVertical="true" app:cardCornerRadius="8dp" app:cardElevation="0dp">
                <ImageView android:layout_width="@dimen/chefy_size" android:layout_height="@dimen/chefy_size" android:src="@drawable/img_chefy"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_chefy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/nutrition_chefy_margin_left" android:layout_toRightOf="@+id/card_chefy" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/tv_chefy_not_yet_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:layout_marginBottom="4dp" android:lineSpacingExtra="3dp"/>
                <TextView android:textSize="@dimen/nutrition_chefy_text_size" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/tv_chefy_not_yet_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:layout_marginBottom="10dp" android:lineSpacingExtra="3dp"/>
                <TextView android:textSize="@dimen/nutrition_header_text_size" android:textColor="@color/white" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/tv_buy_chefy_btn" android:background="@drawable/background_nutrition_btn" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
