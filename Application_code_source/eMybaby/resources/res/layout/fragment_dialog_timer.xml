<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/transparent" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_white_with_grey_border" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:background="@drawable/bg_light_purple_top_rounded" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/timer_dialog_close" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_close_dialog" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/fuente_home" android:textColor="@color/default_text_color" android:gravity="center" android:id="@+id/timer_dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:id="@+id/time_dialog_picker_container" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <kankan.wheel.widget.WheelView android:layout_gravity="center" android:id="@+id/timer_dialog_hour" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" : "/>
            <kankan.wheel.widget.WheelView android:layout_gravity="center" android:id="@+id/timer_dialog_mins" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" : "/>
            <kankan.wheel.widget.WheelView android:layout_gravity="center" android:id="@+id/timer_dialog_sec" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/fuente_home" android:textColor="@color/default_text_color" android:gravity="center" android:id="@+id/time_dialog_countdown" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/fuente_home" android:textColor="@color/button_textcolor_selector" android:gravity="center" android:id="@+id/timer_dialog_left_button" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/fuente_home" android:textColor="@color/button_textcolor_selector" android:gravity="center" android:id="@+id/timer_dialog_right_button" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
