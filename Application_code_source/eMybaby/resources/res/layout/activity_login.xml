<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/scalable_15dp" android:paddingBottom="@dimen/scalable_15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_miniland" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/miniland_login_margin" android:layout_marginRight="@dimen/miniland_login_margin" android:layout_marginBottom="50dp" android:src="@drawable/ic_miniland" android:adjustViewBounds="true" android:layout_above="@+id/iv_emybaby_large" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/iv_emybaby_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/emybaby_login_margin" android:layout_marginRight="@dimen/emybaby_login_margin" android:src="@drawable/ic_logo_large" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="vertical" android:background="@drawable/borde_redondeado_blanco" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="40dp" android:layout_marginRight="20dp" android:layout_marginBottom="@dimen/margen_imagenes">
            <EditText android:textSize="@dimen/fuente_home" android:textColor="@color/dialog_border" android:textColorHint="@color/grey_form" android:layout_gravity="left" android:id="@+id/correo" android:background="@null" android:padding="@dimen/margen_imagenes" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="@integer/max" android:inputType="textEmailAddress"/>
            <View android:background="@color/grey_eee" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp"/>
            <EditText android:textSize="@dimen/fuente_home" android:textColor="@color/dialog_border" android:textColorHint="@color/grey_form" android:layout_gravity="left" android:id="@+id/contrasena" android:background="@null" android:padding="@dimen/margen_imagenes" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="@integer/max" android:inputType="textPassword"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatCheckBox android:textSize="@dimen/fuente_home" android:textColor="@color/dialog_border" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/recordar" android:background="@drawable/borde_redondeado_blanco" android:padding="5dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" android:checked="true"/>
        <TextView android:textSize="@dimen/fuente_home" android:textColor="@color/selected_medica" android:gravity="center" android:id="@+id/login_forgot_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp"/>
        <TextView android:textSize="@dimen/fuente_home" android:textColor="@color/selected_medica" android:gravity="center" android:id="@+id/login_register" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp"/>
        <TextView android:textSize="@dimen/fuente_home" android:textColor="@color/selected_medica" android:gravity="center" android:id="@+id/login_privacy_policy" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp"/>
        <Button android:textSize="@dimen/fuente_home" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/blogin" android:background="@drawable/contenedor_redondeado_verde" android:padding="@dimen/margen_imagenes" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp"/>
        <com.google.android.gms.common.SignInButton android:id="@+id/btn_google_sign_in" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="4dp" android:layout_marginRight="20dp"/>
    </LinearLayout>
</ScrollView>
