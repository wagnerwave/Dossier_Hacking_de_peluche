<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.sozpic.miniland.TopMenuActivity android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/pregnancy_el_common_header" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="@dimen/alto_menu_head"/>
    <include android:id="@+id/pregnancy_el_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/pregnancy_el_common_header" layout="@layout/layout_pregnancy_section_header"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/pregnancy_el_pregnant_header" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/pregnancy_el_header">
        <TextView android:textSize="@dimen/player_item_textsize" android:textColor="@color/pink" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/pregnancy_el_pregnant_elapsed" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/player_control_textsize" android:textColor="@color/grey" android:id="@+id/pregnancy_el_date" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:id="@+id/pregnancy_el_separator1" android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="2dp" android:layout_below="@+id/pregnancy_el_pregnant_header"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/pregnancy_el_fhr_fm_container" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2" android:layout_below="@+id/pregnancy_el_separator1" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_weight="1">
            <ImageView android:layout_width="@dimen/player_control_icons_size" android:layout_height="@dimen/player_control_icons_size" android:src="@drawable/ic_pregnant_fhr" android:layout_alignParentRight="true"/>
            <com.sozpic.miniland.componentes.TextViewGotham android:textSize="@dimen/pregnancy_doppler_values_textsize" android:textColor="@color/pink" android:gravity="center" android:id="@+id/pregnancy_el_fhr_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
            <com.sozpic.miniland.componentes.TextViewGotham android:textSize="@dimen/pregnancy_doppler_title_textsize" android:textColor="@color/grey" android:gravity="center" android:id="@+id/pregnancy_el_fhr_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <View android:background="@color/list_divider" android:layout_width="2dp" android:layout_height="match_parent"/>
        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_weight="1">
            <ImageView android:id="@+id/pregnancy_el_fm_icon" android:layout_width="@dimen/player_control_icons_size" android:layout_height="@dimen/player_control_icons_size" android:src="@drawable/ic_pregnant_fm" android:layout_alignParentRight="true"/>
            <com.sozpic.miniland.componentes.TextViewGotham android:textSize="@dimen/pregnancy_doppler_values_textsize" android:textColor="@color/pregnancy_graph_fm" android:gravity="center" android:id="@+id/pregnancy_el_fm_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <com.sozpic.miniland.componentes.TextViewGotham android:textSize="@dimen/pregnancy_doppler_title_textsize" android:textColor="@color/grey" android:gravity="center" android:id="@+id/pregnancy_el_fm_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@+id/pregnancy_el_separator2" android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="2dp" android:layout_below="@+id/pregnancy_el_fhr_fm_container"/>
    <RelativeLayout android:id="@+id/pregnancy_el_record_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:layout_below="@+id/pregnancy_el_separator2">
        <ImageView android:id="@+id/pregnancy_el_record_icon" android:layout_width="@dimen/player_control_icons_size" android:layout_height="@dimen/player_control_icons_size" android:layout_marginRight="5dp" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/pregnancy_el_volume_icon" android:layout_width="@dimen/player_control_icons_size" android:layout_height="@dimen/player_control_icons_size" android:src="@drawable/ic_volumen" android:layout_centerInParent="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/pregnancy_el_volume_icon" android:layout_toRightOf="@+id/pregnancy_el_record_icon" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/player_control_textsize" android:textColor="@color/pink" android:id="@+id/pregnancy_el_record_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true"/>
            <Chronometer android:textSize="@dimen/player_control_textsize" android:textColor="@color/pink" android:id="@+id/pregnancy_el_record_chrono" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView android:id="@+id/pregnancy_el_battery" android:layout_width="@dimen/player_control_icons_size" android:layout_height="@dimen/player_control_icons_size" android:src="@drawable/ic_pregnancy_battery_0" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
        <SeekBar android:id="@+id/pregnancy_el_volume" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/pregnancy_el_battery" android:layout_toRightOf="@+id/pregnancy_el_volume_icon" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/pregnancy_el_separator3" android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="2dp" android:layout_below="@+id/pregnancy_el_record_container"/>
    <com.cuatroochenta.miniland.pregnancy.customs.FhrView android:id="@+id/pregnancy_fhrview" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3"/>
    <Button android:textSize="@dimen/player_control_textsize" android:textColor="@android:color/white" android:id="@+id/pregnancy_el_button" android:background="@drawable/bg_pink_dark_button" android:padding="@dimen/margen_imagenes" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/scalable_10dp" android:layout_alignParentBottom="true" android:textAllCaps="true"/>
</LinearLayout>
